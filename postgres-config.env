# PostgreSQL 17 Configuration
# Edit this file to configure your PostgreSQL instance

# PostgreSQL Version
POSTGRES_VERSION=17

# Database Configuration
POSTGRES_DB=n8n_db
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=n8n_secure_password_change_me

# Additional Databases (comma-separated, will be created automatically)
ADDITIONAL_DATABASES=

# Additional Users (format: username:password:database, comma-separated)
ADDITIONAL_USERS=

# Enable pgvector extension
ENABLE_PGVECTOR=true

# PostgreSQL Port (default: 5432)
POSTGRES_PORT=5432

# Memory Settings (adjust based on your system)
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=16MB

# Connection Settings
POSTGRES_MAX_CONNECTIONS=100

# Timezone
POSTGRES_TIMEZONE=UTC

# Backup Settings
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=7
